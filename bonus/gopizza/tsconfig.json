{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@contexts/*": ["src/contexts/*"],
      "@routes/*": ["src/routes/*"],
      "@assets/*": ["src/shared/assets/*"],
      "@configs/*": ["src/shared/configs/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@theme": ["src/shared/theme/index.ts"],
      "@src/*": ["src/*"],
    }
  }
}
